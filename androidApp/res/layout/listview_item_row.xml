<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView        
        android:id="@+id/imageframe"
        android:layout_width="119dip"
        android:layout_height="85dip"
        android:layout_gravity="left"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:contentDescription="@string/AllImages"
        android:src="@drawable/list_image_frame" />

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="left"
	    android:layout_marginLeft="124dip"
	    android:orientation="vertical"
	    android:paddingRight="32dip" >

    	<TextView
        	android:id="@+id/item_title"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:textSize="16sp" 		
 			android:textColor="@color/orange"
 			android:textStyle="bold"
 			android:layout_marginTop="5dip" />
    	<TextView
    	    android:id="@+id/item_desc"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="5dip"
    	    android:ellipsize="marquee"
    	    android:maxLength="125"
    	    android:paddingBottom="20dip"
    	    android:textColor="@color/white"
    	    android:textSize="13sp" />

	</LinearLayout>

	<LinearLayout
	    android:layout_width="32dip"
	    android:layout_height="match_parent"
	    android:layout_gravity="right"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/item_distance"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dip"
		    android:padding="2dip"
		    android:textColor="@color/white"
		    android:textSize="12sp" />

		<ImageView 
		    android:id="@+id/accessoryarrow" 
		    android:layout_width="29dip" 
		    android:layout_height="30dip" 
		    android:contentDescription="@string/AllImages" 
		    android:src="@drawable/list_accessoryview_image"/>
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="108dip"
        android:layout_height="68dip"
        android:layout_gravity="left"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="9dip">
	    <ImageView        
        	android:id="@+id/srcimage"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"        	
        	android:contentDescription="@string/AllImages"
        	android:src="@drawable/list_image_frame_icon" />
	</RelativeLayout>
</FrameLayout>