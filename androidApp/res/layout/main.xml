<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/appbg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
	    android:orientation="vertical" >  

     	<ImageView
     	    android:id="@+id/imageView1"
     	    android:layout_width="180dip"
     	    android:layout_height="95dip"
     	    android:contentDescription="@string/AllImages"
     	    android:layout_gravity="center_horizontal"
     	    android:src="@drawable/mtam_logo" />
     	<ImageView
     	    android:id="@+id/imageView2"
     	    android:layout_width="fill_parent"
     	    android:layout_height="250dip"
     	    android:contentDescription="@string/AllImages"
     	    android:layout_gravity="center_horizontal"
     	    android:layout_marginTop="35dip"
     	    android:src="@drawable/path_line" /> 	
	</LinearLayout>
	<RelativeLayout
     	    android:layout_width="fill_parent" 
     	    android:layout_height="wrap_content">
        	<LinearLayout
        	    android:id="@+id/contentLayout1"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_marginTop="45dip"
        	    android:layout_gravity="center_horizontal"
        	    android:orientation="vertical" >
           
	            <Button
	                android:id="@+id/aboutbutton"
	                android:layout_width="158dip"
	                android:layout_height="153dip"
	                android:layout_gravity="right"
	                android:layout_marginTop="30dip"
	                android:layout_marginRight="-10dip"
	                android:background="@drawable/home_aboutbutton_layout" />
            	<Button
            	    android:id="@+id/addapointbutton"
            	    android:layout_width="175dip"
            	    android:layout_height="177dip"
            	    android:layout_marginLeft="2dip"
            	    android:layout_marginTop="-125dip"
            	    android:background="@drawable/home_addpointbutton_layout" />           
            	<Button
            	    android:id="@+id/mappbutton"
            	    android:layout_width="234dip"
            	    android:layout_height="187dip"
            	    android:layout_gravity="center_horizontal"            	    
            	    android:layout_marginTop="-35dip"
            	    android:background="@drawable/home_mappbutton_layout" />

        	</LinearLayout>
    	</RelativeLayout>
    	<RelativeLayout
     	    android:layout_width="fill_parent" 
     	    android:layout_height="35dip"
     	    android:layout_gravity="bottom">

    	    <Button
    	        android:id="@+id/infobutton"
    	        android:layout_width="28dip"
    	        android:layout_height="28dip"
    	        android:layout_alignParentRight="true"
    	        android:layout_alignParentTop="true"
    	        android:layout_marginRight="10dp"
    	        android:background="@drawable/icon_info" />
    	    
        </RelativeLayout>
</FrameLayout>