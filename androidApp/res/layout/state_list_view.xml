<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/appbg" >
    <FrameLayout
	    android:layout_width="fill_parent"
		android:layout_height="44dip"
	    android:background="@drawable/bg_base_gradient">
	    <ImageButton
	        android:id="@+id/backButton"
	        android:layout_width="wrap_content"
	        android:layout_height="35dip"
	        android:layout_gravity="center_vertical|left"
	       	android:layout_marginLeft="5dp"
	        android:src="@drawable/icon_back"
	        android:contentDescription="@string/AllImages"
	        android:background="@drawable/button_base_shape" />
		<LinearLayout
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_vertical|left"
    		android:layout_marginLeft="75dp">

    		<TextView
    		    android:id="@+id/list_title"
    		    android:layout_width="fill_parent"
    		    android:layout_height="wrap_content"
    		    android:layout_marginTop="0dip"
    		    android:paddingLeft="5dip"
    		    android:text="@string/stateListTitle"
    		    android:textColor="@color/white"
    		    android:textSize="18sp"
    		    android:textStyle="bold" />
    	    	
	    </LinearLayout>    
	 </FrameLayout>
     <ListView
		android:id="@+id/statelistview"
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:background="@color/transparent"
		android:cacheColorHint="@color/transparent"
		android:divider="@drawable/list_divider"
        android:dividerHeight="2dip"
        android:listSelector="@drawable/list_bg_solid_color" >
	</ListView>
	<FrameLayout 
	    android:layout_width="fill_parent"
		android:layout_height="33dip"
	    android:background="@color/transparent"
	    android:layout_gravity="bottom">	    
	</FrameLayout>
</LinearLayout>